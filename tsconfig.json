{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
		"importHelpers": true,
        "lib": [
		  "es2015",
		  "es2017",
		  "dom"
		],      
        "strict": true, 
        "strictNullChecks": true,
		"strictPropertyInitialization": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
          "@/*": [
            "src/*"
          ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}